<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phonelogin">

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Please Enter your phone number with your country code below !"
        android:textSize="20dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:hint="Enter phone number here"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_below="@+id/phone_text"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone_verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:hint="Enter verification code here"
        android:layout_below="@+id/phone_number_input"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification code"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/phone_verification_code_input" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify user"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/send_verification_code"
        android:visibility="invisible"/>

</RelativeLayout>